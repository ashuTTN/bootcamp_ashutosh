<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="@dimen/login_padding_45dp">


    <TextView
        android:id="@+id/loadingHeading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/loading"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_text_size_21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="24dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="@id/loadingHeading"
        app:layout_constraintStart_toStartOf="@id/loadingHeading"
        app:layout_constraintTop_toBottomOf="@id/loadingHeading" />
</androidx.constraintlayout.widget.ConstraintLayout>